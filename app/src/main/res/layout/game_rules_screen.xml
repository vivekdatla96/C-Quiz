<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBackground"
        android:padding="20dp">

        <TextView
            android:id="@+id/gameRulesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/highlightColor"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Game Rules"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gameRulesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gameRulesTitle"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/proceedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gameRulesText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_primary"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Proceed to Quiz"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</ScrollView>





